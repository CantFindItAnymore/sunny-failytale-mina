.component {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item {
  width: 690rpx;
  background: #fff;
  margin: 40rpx 0;
  border-radius: 24rpx;
  padding: 30rpx;
  box-sizing: border-box;
  box-shadow: 4rpx 7rpx 8rpx 0 rgba(2,31,59,0.08);
}

.status {
  height: 50rpx;
  display: flex;
  justify-content: flex-end;
  border-bottom: 1rpx solid #999;
}

.detail {
  min-height: 200rpx;
  width: 100%;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.detail>image {
  height: 170rpx;
  width: 170rpx;
}

.detail>view:nth-child(2) {
  flex: 1;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.detail>view:nth-child(2)>view {
  margin: 10rpx 0;
}

.weight-font {
  font-weight: bolder;
}

.rate {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  text-align: right;
}

.menu-item {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  text-align: right;
}

.menu-item > van-button {
  margin-left: 20rpx;
}

