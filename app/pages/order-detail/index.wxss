.banner {
  height: 200rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #FFCBA1;
  color: #fff;
  font-size: 30rpx;
  font-weight: bolder;
}

.address {
  margin-top: 80rpx;
  min-height: 150rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}

.address>view:nth-child(1) {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}




.detail {
  margin-top: 80rpx;
  min-height: 200rpx;
  width: 100%;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.detail>image {
  height: 170rpx;
  width: 170rpx;
}

.detail>view:nth-child(2) {
  flex: 1;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.detail>view:nth-child(2)>view {
  margin: 10rpx 0;
}