van-field {
  width: 100%;
}

.detail {
  margin-bottom: 80rpx;
  min-height: 200rpx;
  width: 100%;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.detail>image {
  height: 170rpx;
  width: 170rpx;
}

.detail>view:nth-child(3) {
  flex: 1;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.detail>view:nth-child(3)>view {
  margin: 10rpx 0;
}

.tags-container {
  height: 100%;
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tags-container > image {
  height: 50rpx;
  width: 50rpx;
}