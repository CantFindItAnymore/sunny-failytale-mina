.list-item-desc-footer {
  font-size: 22rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.amount {
  font-size: 36rpx;
  font-weight: bolder;
  color:#000;
}

.smaller {
  font-size: 18rpx;
}

.list-item-desc-footer > image {
  height: 40rpx;
  width: 40rpx;
}

van-icon {
  position: absolute;
  right: 50rpx;
  top: 0;
  bottom: 0;
}

.list-no-result {
  height: 300rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}