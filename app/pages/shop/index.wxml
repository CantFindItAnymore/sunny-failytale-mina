<view class="container">
  <van-sticky>
    <view class="header" wx:if="{{classify}}">
      {{classify}}
    </view>
  </van-sticky>

  <view class="list">
    <view
      class="list-item"
      wx:for='{{list.data}}'
      wx:key="index"
    >
      <image src="{{item.mainPicUrl}}"  bind:tap="toShopDetail" data-gid='{{item.id}}' />
      <view class="list-item-desc">
        <view bind:tap="toShopDetail" data-gid='{{item.id}}' >{{item.productType[0].description}}</view>
        <view class="list-item-desc-footer">
          <view class="amount">
            <text class="weight-font">￥</text>
            {{item.minPrice}}
            <text class="weight-font"> ~ </text>
            <text class="weight-font">￥</text>
            {{item.maxPrice}}
          </view>
          <image src="{{likedIdList.include(item.id)?like:unLike}}" />
        </view>
      </view>
    </view>
  </view>
</view>